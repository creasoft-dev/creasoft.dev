<div class="topography-background content w-full flex rounded-lg">
    <div id="title" class="flex-1 text-center align-middle " >
    <span class="text-4xl font-mono font-extrabold uppercase">Radar de Tecnologia</span>
    </div>
    <div id="radar-categories" class="flex-1 text-center" >
        {% for id, category in categories  %}
        <div class="text-white font-bold rounded-lg p-1 m-1 bg-{{category.color}}-600">
        <a class="no-underline hover:font-bold hover:text-white" href='/{{ locale + "/radar/" + category.id | url}}'>{{ category.label }}</a>
        </div>
        {% endfor %}
    </div>
</div>